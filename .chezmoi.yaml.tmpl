{{ $email := promptStringOnce . "email" "Email address" -}}
{{- $recipient := promptStringOnce . "recipient" "GPG recipient" -}}
{{- $fullname := promptStringOnce . "fullname" "Full name" -}}

encryption: "gpg"

data:
    email: {{ $email | quote }}
    recipient: {{ $recipient | quote }}
    fullname: {{ $fullname | quote }}

gpg:
    recipient: {{ $recipient | quote }}

git:
    autoCommit: true
#  autoPush: true

add:
    secrets: error

edit:
    watch: true
